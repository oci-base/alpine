{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^version.txt$"
      ],
      "matchStrings": [
        "(?<currentValue>.*?)\\n"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "alpinelinux/aports"
    }
  ],
  "semanticCommits": true,
  "automerge": true
}
